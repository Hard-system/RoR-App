<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Card number</th>
      <th>Customer</th>
      <th>Reservation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
    <%
    reservation = Reservation.find(payment.reservation_id)
    %>
      <tr>
        <td><%= payment.amount %></td>
        <td><%= payment.card_number %></td>
        <td><%= payment.customer.last_name %></td>
        <td><%= reservation.cruise.name %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Payments Oustanding</h1>

<table>
  <thead>
    <tr>
      <th>Amount Due</th>
      <th>Card number</th>
      <th>Customer</th>
      <th>Reservation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
    <%
    reservation = Reservation.find(payment.reservation_id)
    outstanding = 2000 - payment.amount
    %>
      <tr>
        <td><%= outstanding %></td>
        <td><%= payment.card_number %></td>
        <td><%= payment.customer.last_name %></td>
        <td><%= reservation.cruise.name %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'New Payment', new_payment_path(:customer_id => payment.customer_id,
                                                        :amount => outstanding) %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

